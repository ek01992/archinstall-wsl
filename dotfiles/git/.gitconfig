[user]
    name = Your Name
    email = your.email@example.com

[core]
    editor = nvim
    autocrlf = input
    pager = less -FRX

[color]
    ui = auto

[push]
    default = simple

[alias]
    st = status
    ci = commit
    co = checkout
    br = branch
    lg = log --oneline --graph --decorate --all
    df = diff
    last = log -1 HEAD